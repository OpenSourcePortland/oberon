<h1>Listing ships</h1>

<table>
  <tr>
    <th>Character</th>
    <th>Name</th>
    <th>Ship type</th>
    <th>Price</th>
    <th>Size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ships.each do |ship| %>
  <tr>
    <td><%= ship.character_id %></td>
    <td><%= ship.name %></td>
    <td><%= ship.ship_type %></td>
    <td><%= ship.price %></td>
    <td><%= ship.ship_size %></td>
    <td><%= link_to 'Show', ship %></td>
    <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
    <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

